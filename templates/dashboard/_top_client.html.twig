{# templates/dashboard/_top_client.html.twig
   Expected variables:
     - topClient: {
           name:        string,
           description: string,
           totalHours:  string  (e.g. "142h"),
           notesCount:  int,
       }
#}

<div class="bg-gradient-to-br from-primary via-blue-700 to-accent rounded-xl shadow-lg p-6 text-white relative overflow-hidden group">

    {# Dot-grid pattern #}
    <div class="absolute inset-0 opacity-20 pointer-events-none"
         style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
    <div class="absolute -right-10 -top-10 w-40 h-40 bg-white opacity-10 rounded-full blur-3xl group-hover:opacity-20 transition-opacity duration-700"></div>

    <div class="relative z-10 flex flex-col h-full justify-between">
        <div>
            <div class="flex justify-between items-start mb-4">
                <div class="bg-white/20 backdrop-blur-sm p-2 rounded-lg">
                    <span class="material-symbols-outlined">star</span>
                </div>
                <span class="bg-black/20 text-xs font-bold px-2 py-1 rounded uppercase tracking-wide">
                    Top Client
                </span>
            </div>

            <h3 class="text-2xl font-bold mb-1">{{ topClient.name }}</h3>
            <p class="text-blue-100 text-sm mb-6">{{ topClient.description }}</p>

            <div class="grid grid-cols-2 gap-4 mb-6">
                <div class="bg-black/20 rounded-lg p-3 backdrop-blur-sm">
                    <p class="text-xs text-blue-200 mb-1">Total Hours</p>
                    <p class="text-xl font-bold">{{ topClient.totalHours }}</p>
                </div>
                <div class="bg-black/20 rounded-lg p-3 backdrop-blur-sm">
                    <p class="text-xs text-blue-200 mb-1">Notes</p>
                    <p class="text-xl font-bold">{{ topClient.notesCount }}</p>
                </div>
            </div>
        </div>

        <div class="flex gap-3 mt-auto">
            <button class="flex-1 bg-white text-primary font-bold py-2 rounded-lg text-sm shadow hover:bg-blue-50 transition-colors">
                Profile
            </button>
            <button class="flex-1 bg-black/20 text-white font-bold py-2 rounded-lg text-sm hover:bg-black/30 transition-colors border border-white/10">
                Message
            </button>
        </div>
    </div>
</div>
