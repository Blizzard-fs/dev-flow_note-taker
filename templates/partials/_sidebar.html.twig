{# templates/partials/_sidebar.html.twig
   Variables: appName, appVersion, currentRoute, notesCount, projects, user #}
<aside class="w-64 flex flex-col bg-surface-darker border-r border-slate-800 shrink-0">
    <div class="h-16 flex items-center px-6 border-b border-slate-800 gap-3">
        <div class="h-8 w-8 rounded-lg bg-gradient-to-br from-primary to-accent flex items-center justify-center shadow-glow">
            <span class="material-symbols-outlined text-white text-xl">code</span>
        </div>
        <div class="flex flex-col">
            <span class="text-white font-bold text-lg tracking-tight">{{ appName }}</span>
            <span class="text-slate-500 text-xs font-medium">{{ appVersion }}</span>
        </div>
    </div>
    <nav class="flex-1 px-3 py-6 space-y-1 overflow-y-auto">
        {% set navItems = [
            { route: 'dashboard',        label: 'Dashboard', icon: 'dashboard'   },
            { route: 'app_client_index', label: 'Clients',   icon: 'groups'      },
            { route: 'app_note_index',   label: 'Notes',     icon: 'description', badge: notesCount ?? 0 },
            { route: 'settings',         label: 'Settings',  icon: 'settings',    disabled: true }
        ] %}
        {% for item in navItems %}
            {% set isActive = currentRoute starts with item.route %}
            <a href="{{ item.disabled is not defined ? path(item.route) : '#' }}"
               class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors relative overflow-hidden {{ isActive ? 'bg-primary/10 text-primary border border-primary/20' : 'text-slate-400 hover:text-slate-100 hover:bg-slate-800' }}">
                {% if isActive %}<div class="absolute inset-y-0 left-0 w-1 bg-primary rounded-r-full"></div>{% endif %}
                <span class="material-symbols-outlined">{{ item.icon }}</span>
                <span class="font-medium">{{ item.label }}</span>
                {% if item.badge is defined and item.badge > 0 %}
                    <span class="ml-auto bg-slate-800 text-slate-300 text-xs py-0.5 px-2 rounded-full">{{ item.badge }}</span>
                {% endif %}
            </a>
        {% endfor %}
        {% if projects is defined and projects|length > 0 %}
            <div class="pt-6 mt-6 border-t border-slate-800">
                <p class="px-3 text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">Projects</p>
                {% set colorDots = { 'emerald': 'bg-emerald-500', 'accent': 'bg-accent', 'orange': 'bg-orange-500' } %}
                {% for project in projects %}
                    <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg text-slate-400 hover:text-slate-100 hover:bg-slate-800 transition-colors">
                        <span class="w-2 h-2 rounded-full {{ colorDots[project.color] ?? 'bg-slate-500' }}"></span>
                        <span class="font-medium text-sm">{{ project.name }}</span>
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </nav>
    <div class="p-4 border-t border-slate-800">
        <a href="{{ path('app_note_new') }}" class="w-full flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-semibold py-2.5 px-4 rounded-lg shadow-glow transition-all mb-4">
            <span class="material-symbols-outlined text-[20px]">add</span> Create Note
        </a>
        <div class="flex items-center gap-3 px-2">
            <div class="relative">
                <img alt="{{ user.name }}" class="w-9 h-9 rounded-full ring-2 ring-slate-700" src="{{ user.avatarUrl }}"/>
                <span class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-green-500 border-2 border-surface-darker rounded-full"></span>
            </div>
            <div class="flex flex-col overflow-hidden">
                <span class="text-sm font-medium text-white truncate">{{ user.name }}</span>
                <span class="text-xs text-slate-500 truncate">{{ user.role }}</span>
            </div>
            <button class="ml-auto text-slate-400 hover:text-white"><span class="material-symbols-outlined">logout</span></button>
        </div>
    </div>
</aside>
