{# templates/client/show.html.twig
   Variables: client, appName, appVersion, user, notesCount, projects #}
{% extends 'base.html.twig' %}
{% block title %}{{ client.name }} — {{ appName }}{% endblock %}

{% block body %}
    {% include 'partials/_sidebar.html.twig' with {
        appName:      appName,
        appVersion:   appVersion,
        currentRoute: app.request.attributes.get('_route'),
        notesCount:   notesCount ?? 0,
        projects:     projects ?? [],
        user:         user,
    } %}

    <main class="flex-1 flex flex-col overflow-hidden">
        <div class="flex-1 overflow-y-auto p-8">
            <div class="max-w-4xl mx-auto">
                {# Breadcrumb #}
                <nav class="flex items-center gap-2 text-sm text-slate-400 mb-6">
                    <a class="hover:text-primary transition-colors" href="{{ path('dashboard') }}">Dashboard</a>
                    <span class="material-symbols-outlined text-[16px]">chevron_right</span>
                    <a class="hover:text-primary transition-colors" href="{{ path('app_client_index') }}">Clients</a>
                    <span class="material-symbols-outlined text-[16px]">chevron_right</span>
                    <span class="text-slate-100">{{ client.name }}</span>
                </nav>

                {# Header card #}
                <div class="bg-gradient-to-br from-primary via-blue-700 to-accent rounded-xl p-8 text-white relative overflow-hidden mb-6">
                    <div class="absolute inset-0 opacity-10 pointer-events-none"
                         style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
                    <div class="relative flex items-start justify-between">
                        <div class="flex items-center gap-5">
                            <div class="size-16 rounded-2xl flex items-center justify-center text-xl font-bold text-white bg-white/20 backdrop-blur-sm shrink-0 overflow-hidden">
                                {% if client.avatarUrl is defined and client.avatarUrl %}
                                    <img src="{{ client.avatarUrl }}" alt="{{ client.name }}" class="w-full h-full object-cover"/>
                                {% else %}
                                    {{ client.initials ?? client.name|slice(0,2)|upper }}
                                {% endif %}
                            </div>
                            <div>
                                <h1 class="text-3xl font-bold mb-1">{{ client.name }}</h1>
                                <p class="text-blue-100 text-sm">{{ client.description ?? 'No description provided.' }}</p>
                            </div>
                        </div>
                        <div class="flex gap-2 shrink-0">
                            <button onclick="openEditModal()"
                                    class="flex items-center gap-2 px-4 py-2 rounded-lg bg-white/20 hover:bg-white/30 text-white text-sm font-medium transition-all border border-white/20 backdrop-blur-sm">
                                <span class="material-symbols-outlined text-[18px]">edit</span> Edit
                            </button>
                        </div>
                    </div>
                    <div class="grid grid-cols-3 gap-4 mt-8">
                        <div class="bg-black/20 rounded-xl p-4 backdrop-blur-sm text-center">
                            <p class="text-xs text-blue-200 mb-1">Total Notes</p>
                            <p class="text-2xl font-bold">{{ client.notes is defined ? client.notes|length : 0 }}</p>
                        </div>
                        <div class="bg-black/20 rounded-xl p-4 backdrop-blur-sm text-center hidden">
                            <p class="text-xs text-blue-200 mb-1">Total Hours</p>
                            <p class="text-2xl font-bold">{{ client.totalHours ?? '—' }}</p>
                        </div>
                        <div class="bg-black/20 rounded-xl p-4 backdrop-blur-sm text-center">
                            <p class="text-xs text-blue-200 mb-1">Member Since</p>
                            <p class="text-2xl font-bold">{{ client.createdAt ? client.createdAt|date('Y - M - d') : '—' }}</p>
                        </div>
                    </div>
                </div>

                {# Recent Notes for this client #}
                <div class="bg-surface-dark border border-slate-700/50 rounded-xl overflow-hidden">
                    <div class="flex items-center justify-between px-6 py-4 border-b border-slate-800">
                        <h3 class="text-base font-bold text-white">Notes for {{ client.name }}</h3>
                        <a href="{{ path('app_note_new') }}"
                           class="flex items-center gap-1 text-sm text-primary hover:text-primary-dark font-medium">
                            <span class="material-symbols-outlined text-[16px]">add</span> New Note
                        </a>
                    </div>
                    {% if client.notes is defined and client.notes|length > 0 %}
                        <div class="divide-y divide-slate-800/60">
                            {% for note in client.notes %}
                                <a href="{{ path('app_note_show', {id: note.id}) }}"
                                   class="flex items-center justify-between px-6 py-4 hover:bg-slate-800/30 transition-colors group">
                                    <div>
                                        <p class="text-sm font-medium text-slate-100 group-hover:text-primary transition-colors">{{ note.title }}</p>
                                        <p class="text-xs text-slate-500 mt-0.5">{{ note.updatedAt ? note.updatedAt|date('M d, Y') : '' }}</p>
                                    </div>
                                    <span class="material-symbols-outlined text-slate-600 group-hover:text-primary transition-colors">arrow_forward</span>
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="py-12 text-center text-slate-500">
                            <span class="material-symbols-outlined text-4xl opacity-20 mb-2 block">description</span>
                            <p class="text-sm">No notes for this client yet.</p>
                        </div>
                    {% endif %}
                </div>

                {# Danger zone #}
                <div class="mt-6 bg-surface-dark border border-red-500/20 rounded-xl p-6">
                    <h3 class="text-sm font-semibold text-red-400 mb-3 uppercase tracking-wider">Danger Zone</h3>
                    {{ include('client/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </main>

    {# Edit modal — lazy-loaded via AJAX when Edit button clicked #}
    <div id="edit-modal" class="fixed inset-0 z-50 flex items-center justify-center p-4 hidden" role="dialog" aria-modal="true">
        <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" onclick="closeEditModal()"></div>
        <div class="relative w-full max-w-lg bg-surface-darker border border-slate-700/60 rounded-2xl shadow-2xl overflow-hidden">
            <div class="flex items-center justify-between px-6 py-5 border-b border-slate-800">
                <h2 class="text-base font-bold text-white">Edit {{ client.name }}</h2>
                <button onclick="closeEditModal()" class="text-slate-400 hover:text-white p-1 rounded-md hover:bg-slate-700 transition-colors">
                    <span class="material-symbols-outlined">close</span>
                </button>
            </div>
            <div id="edit-form-container" class="px-6 py-6">
                <div class="flex items-center justify-center py-8 text-slate-500">
                    <span class="material-symbols-outlined animate-spin mr-2">autorenew</span> Loading…
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
const editModal = document.getElementById('edit-modal');
function openEditModal() {
    fetch('{{ path('app_client_edit', {id: client.id}) }}', {
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
    })
    .then(r => r.text())
    .then(html => {
        document.getElementById('edit-form-container').innerHTML = html;
        editModal.classList.remove('hidden');
        document.body.classList.add('overflow-hidden');
    });
}
function closeEditModal() {
    editModal.classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
}
document.addEventListener('keydown', e => { if (e.key === 'Escape') closeEditModal(); });
</script>
{% endblock %}
