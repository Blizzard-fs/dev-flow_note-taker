{# templates/client/_form.html.twig
   Assumes ClientType fields: name, description, industry (optional), avatarColor (optional)
   Pass {{ form }} and optionally {{ button_label }} #}
{{ form_start(form, { attr: { class: 'space-y-5', novalidate: 'novalidate' } }) }}

    {# Name #}
    <div>
        {{ form_label(form.name, 'Client Name', { label_attr: { class: 'block text-sm font-medium text-slate-300 mb-1.5' } }) }}
        {{ form_widget(form.name, { attr: {
            class: 'w-full bg-slate-900/60 border border-slate-700 rounded-lg px-4 py-2.5 text-sm text-slate-200 placeholder-slate-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all',
            placeholder: 'e.g. Acme Corp'
        }}) }}
        {{ form_errors(form.name, { attr: { class: 'mt-1 text-xs text-red-400' } }) }}
    </div>

    {# Description #}
    {% if form.description is defined %}
    <div>
        {{ form_label(form.description, 'Description', { label_attr: { class: 'block text-sm font-medium text-slate-300 mb-1.5' } }) }}
        {{ form_widget(form.description, { attr: {
            class: 'w-full bg-slate-900/60 border border-slate-700 rounded-lg px-4 py-2.5 text-sm text-slate-200 placeholder-slate-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all resize-none',
            rows: '3',
            placeholder: 'Short description or industry…'
        }}) }}
        {{ form_errors(form.description, { attr: { class: 'mt-1 text-xs text-red-400' } }) }}
    </div>
    {% endif %}

    {# Industry / type — optional field #}
    {% if form.industry is defined %}
    <div>
        {{ form_label(form.industry, 'Industry', { label_attr: { class: 'block text-sm font-medium text-slate-300 mb-1.5' } }) }}
        {{ form_widget(form.industry, { attr: {
            class: 'w-full bg-slate-900/60 border border-slate-700 rounded-lg px-4 py-2.5 text-sm text-slate-200 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all'
        }}) }}
        {{ form_errors(form.industry, { attr: { class: 'mt-1 text-xs text-red-400' } }) }}
    </div>
    {% endif %}

    {# Submit row #}
    <div class="flex items-center justify-end gap-3 pt-2 border-t border-slate-800">
        <button type="button" onclick="closeClientModal()"
                class="px-4 py-2.5 rounded-lg border border-slate-700 hover:border-slate-600 text-slate-300 text-sm font-medium transition-all">
            Cancel
        </button>
        <button type="submit"
                class="flex items-center gap-2 px-5 py-2.5 rounded-lg bg-primary hover:bg-primary-dark text-white text-sm font-bold shadow-lg shadow-blue-500/20 transition-all">
            <span class="material-symbols-outlined text-[18px]">save</span>
            {{ button_label ?? 'Save Client' }}
        </button>
    </div>

{{ form_end(form) }}
